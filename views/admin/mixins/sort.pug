mixin sort()
  .form-group.mb-0
    label(for="category") Lọc theo danh mục
    select.form-control(name="sort")
      option(value="position-asc" selected=(sortKey=="position" && sortType=="asc") ) Vị trí tăng dần
      option(value="position-desc" selected=(sortKey=="position" && sortType=="desc") ) Vị trí giảm dần
      option(value="price-asc" selected=(sortKey=="price" && sortType=="asc") ) Giá tăng dần
      option(value="price-desc" selected=(sortKey=="price" && sortType=="desc") ) Giá giảm dần
      option(value="title-asc" selected=(sortKey=="title" && sortType=="asc") ) Tiêu đề A-Z
      option(value="title-desc" selected=(sortKey=="title" && sortType=="desc") ) Tiêu đề Z-A
