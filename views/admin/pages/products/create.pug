extend ../../layouts/default.pug

block main
  .container.mt-4
    h2 Thêm mới sản phẩm

    form(method="POST", action="/admin/products/create", id="form-create-product")
      .form-group
        label(for="title") Tiêu đề sản phẩm
        input#title.form-control(type="text", name="title", placeholder="Nhập tiêu đề sản phẩm", required)

      .form-group
        label(for="description") Mô tả sản phẩm
        textarea#description.form-control(name="description", rows="4", placeholder="Nhập mô tả sản phẩm")

      .form-group
        label(for="price") Giá bán
        input#price.form-control(type="number", name="price", placeholder="Nhập giá", required, min="0")

      .form-group
        label(for="discount") Giảm giá (%)
        input#discount.form-control(type="number", name="discountPercentage", placeholder="Nhập phần trăm giảm giá", min="0", max="100")

      .form-group
        label(for="stock") Số lượng kho
        input#stock.form-control(type="number", name="stock", placeholder="Nhập số lượng tồn kho", min="0")

      .form-group
        label(for="thumbnail") Ảnh đại diện
        input#thumbnail.form-control-file(type="file", name="thumbnail", accept="image/*")

      .form-group
        label(for="status") Trạng thái
        select#status.form-control(name="status")
          option(value="active") Hoạt động
          option(value="inactive") Ngừng hoạt động

      button.btn.btn-primary(type="submit") Thêm sản phẩm
      a.btn.btn-secondary.ml-2(href="/admin/products") Hủy
